{
    "name": "cambridge-exam/application-system",
    "description": "Cambridge Exam Application and Payment System",
    "type": "project",
    "require": {
        "php": ">=7.4",
        "ext-curl": "*",
        "ext-json": "*",
        "stripe/stripe-php": "^13.0",
        "sendgrid/sendgrid": "^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "lib/"
        }
    },
    "scripts": {
        "start": "php -S localhost:8000",
        "test": "phpunit tests"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}

